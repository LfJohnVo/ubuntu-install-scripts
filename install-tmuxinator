#!/bin/bash

set -e

which tilda || ./install-tilda-and-byobu
which ruby || ./install-ruby

gem install tmuxinator

wget https://raw.githubusercontent.com/tmuxinator/tmuxinator/master/completion/tmuxinator.bash -O ~/bin/tmuxinator.bash
grep -x 'source ~/bin/tmuxinator.bash' ~/.bashrc || (echo -e '\nsource ~/bin/tmuxinator.bash' >> ~/.bashrc)

source ~/bin/tmuxinator.bash
