#!/bin/bash

set -e

which aptitude || sudo apt-get install -y aptitude
which git || sudo aptitude install -y git
which curl || sudo aptitude install -y curl

INSTALL_FILE=$(mktemp --suffix=nvm-install.sh)
curl https://raw.github.com/creationix/nvm/master/install.sh > ${INSTALL_FILE}
sh ${INSTALL_FILE} ~/.bashrc

. ~/.nvm/nvm.sh
nvm install 0.10
nvm alias default 0.10
nvm use default
