#!/usr/bin/env bash

set -e
cd $(dirname ${0})
. ./common.bash

if insideDocker; then
  echo "Not installing snap, because we are inside Docker." >&2
  exit 0
fi

ensureInstalled snapd
[ -L /snap ] || [ -d /snap ] || ( [ -d /var/lib/snapd/snap ] && sudo ln -s /var/lib/snapd/snap / )
sudo service snapd restart
grep -x 'export PATH=/snap/bin:$PATH' ~/.bashrc || echo -e '\nexport PATH=/snap/bin:$PATH' >> ~/.bashrc
