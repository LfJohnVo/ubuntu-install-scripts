#!/usr/bin/env bash

set -e
cd $(dirname ${0})
. ./common.bash

which docker && exit 0

curl -fSL https://get.docker.com/ | sudo su - -c sh
ensureInstalled docker-compose

# Allow current user access to docker
sudo usermod -aG docker "$(id -un)"


# Revert to cgroup v1, and enable on next reboot
ensureInstalled grubby
sudo grubby --update-kernel=ALL --args="systemd.unified_cgroup_hierarchy=0"
sudo systemctl enable docker
