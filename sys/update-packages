#!/usr/bin/env bash

set -e
cd $(dirname ${0})
. ./common.bash

# Exit early if no packages seem to need upgrading
apt-get -s -o Debug::NoLocking=true upgrade | grep -q ^Inst || exit 0

sudo apt-get update
sudo apt-get dist-upgrade --purge -y
sudo apt-get autoremove --purge -y
sudo apt-get autoclean
